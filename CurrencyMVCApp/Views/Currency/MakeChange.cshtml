@model CurrencyMVCApp.ViewModels.RepoViewModel

@{
    ViewData["Title"] = "MakeChange";
}

<h1>MakeChange</h1>
<hr />
<div>
    <form class='d-flex align-items-center' asp-controller='Currency' asp-action='MakeChange' method='post'>
        <div class="form-group">
            <label htmlfor="Amount" class="control-label"></label>
            <input name="Amount" id="amountInput" type="number" step="0.01" class="form-control" 
                value="@Html.DisplayFor(c => c.TotalValue)"
            />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" id='testBtn' class="btn btn-primary" />
        </div>
    </form>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalValue)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Coins List", "Index", "Currency")
</div>