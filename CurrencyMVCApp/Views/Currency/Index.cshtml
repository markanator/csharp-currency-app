@model CurrencyMVCApp.ViewModels.RepoViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>MXCurrencyRepo</h1>
<hr />
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Coin Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coin in Model.Coins)
            {
                <tr>
                    <td>@coin.Name</td>
                    <td>@coin.MonetaryValue.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalValue)
        </dt>
        <dd class = "col-sm-10">
            @Model.TotalValue.ToString("C")
        </dd>
    </dl>
</div>